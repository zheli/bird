{
  "name": "@steipete/bird",
  "version": "0.3.1",
  "description": "CLI tool for tweeting and replying via Twitter/X GraphQL API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bird": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run build:dist && pnpm run build:binary",
    "build:dist": "tsc && node scripts/copy-dist-assets.js",
    "build:binary": "BIRD_VERSION=$(node -p \"require('./package.json').version\") BIRD_GIT_SHA=$(git rev-parse --short=8 HEAD 2>/dev/null || true) bun build --compile --minify --env=BIRD_* src/index.ts --outfile bird",
    "dev": "tsx src/index.ts",
    "bird": "pnpm run build:dist && node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "binary": "pnpm run build:binary",
    "graphql:update": "tsx scripts/update-query-ids.ts"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "json5": "^2.2.3",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "4.0.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  }
}
